generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Task {
  id          String        @id @default(uuid())
  title       String
  description String?
  status      TaskStatus    @default(IN_COMPLETE)
  dueDate     DateTime?
  priority    TaskPriority?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("tasks")
}

enum TaskStatus {
  IN_COMPLETE
  COMPLETED
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
}
